<h1>Manage this talk</h1>
<% if @talk.editable? %>
<%= link_to 'Edit this talk', :controller => "talk", :action => "edit", :id => @talk  %>
<%= link_to 'Delete this talk', :controller => 'talk', :action => 'delete', :id => @talk %>
<br/>
<% end %>
<%= add_talk_to_list_link  %>
<%= link_to 'Download to your calendar using vCal', :action => 'vcal', :id => @talk %>
<%= link_to 'Contact the organiser', user_url(:id => @talk.organiser) %>
<%= render :partial => 'shared/tell_a_friend', :object => @talk %>

<h1>Other lists</h1>

<% unless @talk.related_lists.empty? %>

	<% for related_list in @talk.related_lists %>
	<% next if related_list.list.ex_directory? %>
		<%= link_list related_list.list %>
	<% end %>

<% else %>
	<p>This will be updated at midnight.</p>
<% end %>

<h2>Other talks</h2>

<% for related_talk in @talk.related_talks %>
	<% next if related_talk.talk.ex_directory? %>
	<%= link_talk related_talk.talk %>
<% end %>
