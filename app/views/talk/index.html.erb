<div class='talk effect2 list<%= @talk.series.id %>'>
	<%= logo(@talk, :medium) %>
	<h1 class='summary'><%= @talk.title %></h1>
	<%= link_to_if @talk.speaker, @talk.name_of_speaker, { :controller => "user", :action => "show", :id => @talk.speaker  } %>		
	<div class="btn-toolbar">
	  <div class="btn-group">
	    <%= add_talk_to_list_button %>
	    <%= vcal_button %>
	    <%= text_button %>
	    <% if User.current %>
	    <%= tell_a_friend_button %>
	    <% end %>
	    <%= contact_organizer_button %>
	  </div>
	  <% if @talk.editable? %>
	  <div class="btn-group">
	    <%= link_to 'Edit this talk', {:controller => "talk", :action => "edit", :id => @talk}, :class => 'btn' %>
	    <%= link_to 'Delete this talk', {:controller => 'talk', :action => 'delete', :id => @talk}, :class => 'btn' %>
	  </div>
	  <% end %>
	</div>
	<ul class='details'>
		<li><%= image_tag 'clock.jpg' %><%= format_time_of_talk @talk, true %></li>
		<li><%= image_tag 'house.jpg' %><%= link_list @talk.venue %>.</li>
	</ul>
		
		<% if @talk.special_message %>
			<p class='urgent'><%= @talk.special_message %></p>
		<% end %>

		<%= @talk.abstract_filtered.html_safe %>
		
		<p>This talk is part of the <%= link_list @talk.series %> series.</p>		
		
		<h2>This talk is included in these lists:</h2>
		<ul>
		<% for list in @talk.lists.uniq.sort_by { |list| list.name } %>
			<% next if list.ex_directory? & !list.editable? %>
			<li><%= link_list list %></li>
		<% end %>
		</ul>
		<% if @talk.lists.empty? %>
			<p>This talk is not included in any other list</p>
		<% end %>
		<% unless User.current && User.current.administrator? %>
		<p>Note that ex-directory lists are not shown.</p>
		<% end %>

</div>
