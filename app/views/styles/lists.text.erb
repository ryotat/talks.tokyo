div[class*='list'] h2:before {
	position: absolute;
	top: 0px;
	left: 0px;
	content: "";
	width: 0;
	height: 0;
	border-bottom: 60px solid transparent;
}
<% @lists.each do |list| %>
td.list<%= list.id %> {
	   background-color: <%= list.style %>;
}
div.list<%= list.id %> h2:before {
	border-left: 60px solid <%= list.style %>;

}   
<% end %>