div[class*='list']:before {
	position: absolute;
	top: 0px;
	left: 0px;
	content: "";
	width: 0;
	height: 0;
	border-bottom: 60px solid transparent;
	z-index: 0;
}
a[class*='list']:before {
	position: absolute;
	top: 0px;
	left: 0px;
	content: "";
	width: 0;
	height: 100%;
}
<% @lists.each do |list| %>
.list<%= list.id %>_color {
	   background-color: <%= list.style %>;
}
div.list<%= list.id %>:before {
	border-left: 60px solid <%= list.style %>;

}
a.list<%= list.id %> {
	border-left: 10px solid <%= list.style %>;
}
<% end %>