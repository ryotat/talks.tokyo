<div class='vevent'>
	<%= logo(talk, :medium) %>
	<h1 class='summary'><%= link_talk talk %></h1>
	<div class='details'>
		<%= talk.abstract_filtered.html_safe %>

		<% if talk.special_message %>
			<p class='urgent'><%= talk.special_message %></p>
		<% end %>

		<ul>
			<li>Speaker: <%= talk_speaker talk %></li>
			<li><%= format_time_of_talk talk %></li>
			<li>Venue: <%= talk_venue talk %>.</li>
			<li>Series: <%= link_list talk.series %>; organiser: <%= link_user talk.organiser %>. </li>
		</ul>
	</div>
	<p><%= link_to 'Add to your calendar', talk_url(talk, :format => :vcal ) %> or <%= link_to 'Include in your list', new_talk_association_url(talk) %></p>
</div>
