<h2>All the talks</h2>
<%= render :partial => 'show/add_talk_box', :locals => {:list => nil} %>
<ul class="nav nav-tabs" id="myTab">
  <li class="active"><a href="#" id="day">Today</a></li>
  <li><a href="#" id="week">This week</a></li>
  <% if User.current %>
  <li><a href="#" id="stared">Stared</a></li>
  <% end %>
  <li><a href="#" id="all">All</a></li>
</ul>
<div id="tab-target">
</div>
<script>
     (function ($) {
   $(document).ready(function()
    {
     var start_date = <%= @start_date %>;
     var loadTab = function(action) {
          $('#tab-target').load('/show/'+action+'?start_date='+start_date);
     };
     loadTab('day');
     $('#myTab a').click(function (e) {
     e.preventDefault();
     $(this).tab('show');
     loadTab(this.id);
     });
    });
    })(jQuery);

</script>
