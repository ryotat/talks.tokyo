<h1 class='search'>Search for a talk, series, speaker or venue</h1>

<%= render :partial => 'search' %>

<% if @motd %>
<div class='click'>
<h1><%= document 'Message of the day' %></h1>
<%= @motd %>
</div>
<% end %>

<h1 class="index"><%= link_to "All of Today's Talks", date_index_url %>&nbsp;&nbsp;|&nbsp;&nbsp;<%= link_to "Browse by Date", date_index_url %>&nbsp;&nbsp;|&nbsp;&nbsp;<%= link_to "Recently Added", index_url(:action => 'talks', :letter => 'new') %></h1>

<h1><%= link_list @featured_list %></h1>

<% @featured_lists.each do |list| %>
	<div><%= link_list list %></div>
<% end %>

<h1><%= link_list @featured_talks %></h1>

<div id='featured_talks'>
</div>
<%= javascript_include_tag "jquery-1.7.2.min.js" %>
<script>
   jQuery.noConflict();
   (function ($) {
   $(document).ready(function()    {
   $("#featured_talks").load(<%= ('"/show/simplewithlogo/%d?layout=empty&limit=12"' % @featured_talks.id).html_safe %>);
   });
   })(jQuery);
</script>
